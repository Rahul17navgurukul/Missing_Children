<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPage">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:text="Signup Page"
        android:textColor="#A5A1B8"
        android:textSize="25sp" />

    <!--Edit text fot uesername-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/reg_username_floating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="40dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/reg_email"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:hint="Enter Email?"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#A5A1B8" />
    </android.support.design.widget.TextInputLayout>

    <!--Edit text for Password-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/reg_password_floating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_username_floating_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/reg_password"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#A5A1B8" />
    </android.support.design.widget.TextInputLayout>

    <!--Login Button  -->

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/reg_password_floating_label"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#312E3F"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#A5A1B8"
        android:textSize="17sp" />

    <Button
        android:id="@+id/forgot_password"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_signup"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="Forgot Password ?"
        android:textAllCaps="false"
        android:textColor="#A5A1B8"
        android:textSize="17sp" />

    <!--TextView for Forgot password label  -->
    <Button
        android:id="@+id/btn_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:textAllCaps="false"
        android:text="Already have an account?"
        android:textColor="#68647F" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>

