<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_Activity">

    <!--App Title-->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Missing Chilren"
        android:textColor="#A5A1B8"
        android:textSize="25sp" />

    <!--Edit text fot uesername-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_floating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username_edit_text"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:hint="Username"

            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#A5A1B8" />
    </android.support.design.widget.TextInputLayout>

    <!--Edit text for Password-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_floating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/username_floating_label"
        android:layout_centerHorizontal="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#A5A1B8" />
    </android.support.design.widget.TextInputLayout>

    <!--Login Button  -->

    <Button
        android:id="@+id/login_Button"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/password_floating_label"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="#312E3F"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#A5A1B8"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_forgot_password"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/login_Button"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="Forgot Password"
        android:textAllCaps="false"
        android:textColor="#A5A1B8"
        android:textSize="17sp" />

    <!--TextView for Forgot password label  -->
    <Button
        android:id="@+id/text_sign_up_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_forgot_password"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:textAllCaps="false"
        android:text="Don't have an account? Create One"
        android:textColor="#68647F" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />


</RelativeLayout>